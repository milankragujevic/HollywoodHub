<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sender_chat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout2"
    android:visibility="gone"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sender_user_name_TV"
        android:layout_marginTop="-12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sender_message_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:padding="8dp"
            android:text="Android charting application xml ui design tutorial with example. Android charting application xml ui design tutorial with example. Android charting application xml ui design tutorial with example. Android charting application xml ui design tutorial with example."
            android:textColor="#000" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/arrow_bg1" />

        <ImageView
            android:id="@+id/sender_chat_IV"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:src="@drawable/header_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/sender_time_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chat_layout"
        android:textSize="10sp"
        android:textColor="#C2C2C2" />

    <TextView
        android:id="@+id/sender_user_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="52dp"
        android:text="Rahul Pandey"
        android:textColor="#C2C2C2" />
</RelativeLayout>